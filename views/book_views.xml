<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="book_view_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!--field name="author_ids"/-->
                <field name="author_names" string="Authors"/>
                <field name="edition_date"/>
                <field name="copy_count" string="Copy #"/>
                <field name="publisher_id"/>
                <field name="isbn"/>
            </tree>
        </field>
    </record>

    <record id="book_view_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="copy_count" string="Copy #"/>
                        </group>
                        <group>
                            <field name="publisher_id" domain="[('is_publisher','=',True)]"/>
                            <field name="edition_date"/>
                        </group>
                    </group>
                    <notebook>
                        <!--page string="Description" name="desc">
                            <field name="description"/>
                        </page-->
                        <page string="Authors" name="Authors">
                            <field name="author_ids" domain="[('is_author', '=', True)]" readonly="False">
                              -->  <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>                                   
                                </tree>
                            </field>
                        </page>
                        <page string="Copies Info" name="Copies">
                            <field name="copy_ids" readonly="True">
                                <tree>
                                     <!--field name="name"/-->
                                     <field name="reference"/>
                                </tree> 
			    </field>	 
                       </page>
                        <!--page string="Rentals" name="Rentals">
                            <field name="rental_ids">
                                <tree editable="bottom">
                                    <field name="id" string="Rental #"/>
                                    <field name="copy_id"/>
                                    <field name="customer_id"/>
                                    <field name="rental_date"/>
                                    <field name="return_date"/>
                                    <field name="customer_email"/>
                                </tree>
                            </field>
                        </page--> <!-- displayed only in the Book Copy Form -->

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



     <record model="ir.ui.view" id="book_view_search">
	<field name="name">book.search</field>
	    <field name="model">library.book</field>
	    <field name="arch" type="xml">
	    <search>
	        <field name="name"/>
	        <field name="isbn"/>
	        <field name="publisher_id"/>
	        <field name="author_ids"/>
	    </search>
	 </field>
    </record>




    <record id="copy_view_list" model="ir.ui.view">
        <field name="name">library.copy.list</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="book_id"/>
                <!--field name="author_ids"/-->
		<field name="reference" string="Copy Info"/>
                <field name="author_names" string="Authors"/>
                <field name="edition_date"/>
                <field name="publisher_id"/>
                <field name="isbn"/>
            </tree>
        </field>
    </record>

    <record id="copy_view_form" model="ir.ui.view">
        <field name="name">library.copy.form</field>
        <field name="model">library.copy</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="library.book_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="book_id"/>
		<field name="author_names" string="Authors"/>
            </field>
            <field name="isbn" position="after">
                <field name="reference"/>
            </field>
            <page name="Authors" position="replace">
                <page string="Rentals" name="rentals" readonly="True">
                    <field name="rental_ids" readonly="True"/>
                </page>
            </page>
        </field>
    </record>


    <record id="copy_view_search" model="ir.ui.view">
        <field name="name">library.copy.search</field>
        <field name="model">library.copy</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="library.book_view_search"/>
        <field name="arch" type="xml">
            <field name="isbn" position="after">
                <field name="reference"/>
            </field>
        </field>
    </record>


    <record id="book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="copy_action" model="ir.actions.act_window">
        <field name="name">Book Copies</field>
        <field name="res_model">library.copy</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

