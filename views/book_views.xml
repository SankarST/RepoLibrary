<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="book_view_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author_names" string="Authors"/>
                <field name="edition_date"/>
                <field name="copy_count" string="Copy #"/>
                <field name="publisher_id"/>
                <field name="isbn"/>
                <field name="is_book" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="book_view_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget='image' class="oe_left oe_avatar"/>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" context="{'default_author': True}" widget="many2many_tags"/>
                            <field name="isbn"/>
                            <field name="copy_count" string="Copy #"/>
                        </group>
                        <group>
                            <field name="publisher_id" domain="[('is_publisher','=',True)]"/>
                            <field name="edition_date"/>
			    <field name="is_book" invisible="1"/>

                        </group>
                    </group>
                    <notebook>
                        <!--page string="Authors" name="Authors">
                            <field name="author_ids" domain="[('is_author', '=', True)]" readonly="False">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>                                   
                                </tree>
                            </field>
                        </page-->
                        <page string="Copies Info" name="Copies">
                            <field name="copy_ids" readonly="True">
                                <tree>
                                     <!--field name="name"/-->
                                     <field name="reference"/>
                                </tree> 
			    </field>	 
                       </page>
                        <!--page string="Rentals" name="Rentals">
                            <field name="rental_ids">
                                <tree editable="bottom">
                                    <field name="id" string="Rental #"/>
                                    <field name="copy_id"/>
                                    <field name="customer_id"/>
                                    <field name="rental_date"/>
                                    <field name="return_date"/>
                                    <field name="customer_email"/>
                                </tree>
                            </field>
                        </page--> <!-- displayed only in the Book Copy Form -->

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



     <record model="ir.ui.view" id="book_view_search">
	<field name="name">book.search</field>
	    <field name="model">product.product</field>
	    <field name="arch" type="xml">
	    <!--filter string="Books" name="is_book" domain="[('is_book', '=', 1)]"/--> <!-- to be added in book_action -->
            <search>
	        <field name="name"/>
	        <field name="isbn"/>
	        <field name="publisher_id"/>
	        <field name="author_ids"/>
	    </search>
	 </field>
    </record>




    <record id="copy_view_list" model="ir.ui.view">
        <field name="name">library.copy.list</field>
        <field name="model">library.copy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name" string="Books"/>
                <field name="author_names" string="Authors"/>
                <field name="book_state"/>
                <field name="edition_date"/>
                <field name="publisher_id"/>
                <field name="isbn"/>
            </tree>
        </field>
    </record>

    <record id="copy_view_form" model="ir.ui.view">
        <field name="name">library.copy.form</field>
        <field name="model">library.copy</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="library.book_view_form"/>
        <field name="arch" type="xml">
            <sheet position="before">
		<header>
                    <field name="book_state" widget="statusbar" nolabel="1"
                           statusbar_visible="available,rented,lost"/>
                </header>
	    </sheet>
            <div class="oe_title oe_left" position="before">
            
                <div class="oe_button_box" name="buttons">
                    <button type="object" class="oe_stat_button"
                            icon="fa-users"
                            name="open_readers">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="readers_count"/>
                            </span>
                            <span class="o_stat_text">
                                Readers
                            </span>
                        </div>
                    </button>
                </div>
            </div>
            
           
            <field name="name" position="replace">
                <field name="book_id" context="{'default_is_book': True}"/>
		<!--field name="author_names" string="Authors"/-->
            </field>
            	
            <field name="author_ids"  position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
	
            <field name="isbn" position="after">
                <field name="reference"/>
            </field>
            <page name="Copies" position="before">
                <page string="Rentals" name="rentals" readonly="True">
                    <field name="rental_ids" readonly="True"/>
                </page>
            </page>
        </field>
    </record>


    <record id="copy_view_search" model="ir.ui.view">
        <field name="name">library.copy.search</field>
        <field name="model">library.copy</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="library.book_view_search"/>
        <field name="arch" type="xml">
	    <field name="name" position="replace">
		<field name="display_name" filter_domain = "['|',('name' , 'ilike' , self) , ('reference' , 'ilike' , self)]" string="Name" />
	    </field>
           
            <!-- Below code Not needed as reference is captured in display_name/-->
           
            <!--field name="isbn" position="after">
                <field name="reference"/> 
	    </field-->
          
        </field>
    </record>


    <record id="book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">product.product</field>
        <field name="domain">[('is_book','=',True)]</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_book':'True'}</field>
    </record>


    <record id="copy_action" model="ir.actions.act_window">
        <field name="name">Book Copies</field>
        <field name="res_model">library.copy</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="book_action_view_tree" model="ir.actions.act_window.view">
        <field name="view_mode">tree</field>
        <field name="sequence" eval="20"/>
        <field name="view_id" ref="library.book_view_list"/>
        <field name="act_window_id" ref="library.book_action"/>
    </record>

    <record id="book_action_view_form" model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="sequence" eval="20"/>
        <field name="view_id" ref="library.book_view_form"/>
        <field name="act_window_id" ref="library.book_action"/>
    </record>

</odoo>

