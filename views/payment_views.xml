<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_view_tree" model="ir.ui.view">
        <field name="name">library.payment.tree</field>
        <field name="model">library.payment</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="date"/>
                <field name="customer_id"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="payment_view_search" model="ir.ui.view">
        <field name="name">library.payment.search</field>
        <field name="model">library.payment</field>
        <field name="arch" type="xml">
            <search string="Payments">
                <field name="customer_id"/>
          
                <filter name="group_customer_id" string="Customer" icon="terp-partner" context="{'group_by':'customer_id'}" attrs="{'invisible':[('customer_id', '=', False)]}"/>
            </search>      
         </field>
    </record>

    <record id="payment_action" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">library.payment</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_customer_id': 1}</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Register a payment
                </p><p>
                  Payments are used to register the rental fee and lost fee.
                </p>
        </field>

    </record>
</odoo>
