<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rental_view_list" model="ir.ui.view">
        <field name="name">library.rental.list</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
           
            <tree decoration-info="(( actual_return_date ==True ) and  (actual_return_date &lt;= return_date))"
	          decoration-danger="late_return==True"
	          decoration-bf  = "(current_date == return_date)"
	          default_order="return_date">
	        <field name="id" string="Rental Ref #"/>
                <field name="copy_id" string="Book"/>
                <field name="customer_id"/>
                <!--field name="book_id"/-->
                <field name="rental_date"/>
                <field name="return_date"/>
                <field name="book_author_names"/>
                <field name="actual_return_date"/>
                <field name="late_return"/>
                <field name="state"/>

           </tree>
        </field>
    </record>




    <record id="rental_view_form" model="ir.ui.view">
        <field name="name">library.rental.form</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_return" states="rented" string="Return" type="object"/>
                    <button name="action_lost" states="rented" string="Lost" type="object"/>
                    <button name="action_confirm" states="draft" string="Confirm" type="object"/>
                    <field name="state" widget="statusbar" nolabel="1"
                           statusbar_visible="draft,rented,returned,lost"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="id" string="Rental Ref #"/>
                        </group>
                    
                        <group>
				<!-- widget=selection just displays selectable list. nothing else allowed-->
<!--                            <field name="customer_id" domain="[('is_author', '=', False)]" widget="selection"/ -->
                            <!--field name="customer_id"
				options="{'no_open': True, 'no_create': True}"/>--> <!-- domain set in model-->
				<!--<options="{'no_quick_create': True, 'no_create_edit' : True}"/>-->
                            <field name="customer_id" context="{'default_customer': True}"/>
  			    <field name="customer_email" string="Email"/>
                            <field name="customer_address" string="Contact"/>
                            <field name="customer_address_display" string="Address"/>
                        </group>
                    
                    </group>
                    <group>
                        <group>
<!--                            <field name="customer_id" context="{'default_customer': True}"/>
    -->                        <field name="copy_id" context="{'default_book': True}"/> <!-- options="{'no_open': True, 'no_create' : True}"/-->


                            <field name="book_id"/>
                            <!--field name="copy_id"/-->
                            <field name="book_publisher"/>
                            <field name="book_edition_date"/>
                            <field name="book_author_names"/> 
                        </group>
                    
                       <group>
                           <field name="rental_date"/>
                           <field name="return_date"/>
                           <field name="actual_return_date"/>
                           <field name="late_return"/>
                        </group>
                    </group>  
                    <notebook>
                        
                        <!--page string="Rentals" name="Rentals">
                            <field name="rental_ids">
                                <tree editable="bottom">
                                    field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="rental_date"/>
                                    <field name="return_date"/>
                                    <field name="customer_email"/>
                                     
                                   
                                </tree>
                            </field>
                        </page-->
                        <page string="Authors" name="Authors">
                            <field name="book_authors">
                                <tree readonly="True">
                                    <field name="name"/>
                                    <field name="email"/>                                   
                                </tree>
                            </field>
                        </page>
                        <page string="Comments" name="Comments">
                            <field name="comments"/>
                        </page>


                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="rental_view_search" model="ir.ui.view">
        <field name="name">library.rental.search</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <search string="Rentals">
		<field name="id" string="Rental Ref #"/>
                <field name="book_id" string="Book"/>
                <field name="customer_id" string="Customer"/>
                <!--field name="book_id"/-->

            </search>
        </field>
    </record>



    <record id="rental_action" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">library.rental</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','in',['draft', 'rented'])]</field>
   </record>
</odoo>
